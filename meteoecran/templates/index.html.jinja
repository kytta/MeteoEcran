<section>
	<h2>Search location</h2>
	<form action="/search">
		<div>
			<label for="query">Query</label><input type="search" id="query" name="q" placeholder="Berlin" required>
		</div>
		<div class="controls">
			<input type="submit" value="Search">
		</div>
	</form>
</section>


<section>
	<h2>Weather at coordinates</h2>
	<form action="geo">
		<div>
			<label for="lat">Latitude</label><input type="number" min="-90" max="90" step="any" id="lat" name="lat" placeholder="52.5186" required>
		</div>
		<div>
			<label for="lon">Longitude</label><input type="number" min="-90" max="90" step="any" id="lon" name="lon" placeholder="13.4083" required>
		</div>
		<div class="controls">
			<input type="submit" value="Go">
		</div>
	</form>
</section>
